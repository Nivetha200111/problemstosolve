# Database
DATABASE_URL=postgresql://user:password@host:5432/idearadar

# Cron authentication
CRON_SECRET=your-secret-token-here

# Scoring weights (optional, defaults shown)
NOVELTY_WEIGHT=0.5
QUALITY_WEIGHT=0.35
RECENCY_WEIGHT=0.15

# Ingestion limits
MAX_ITEMS_PER_CRON=50
CONTENT_MAX_LENGTH=10000

# Optional: Embedding API
EMBEDDING_API_URL=
EMBEDDING_API_KEY=

# Rate limiting (requests per minute per domain)
RATE_LIMIT_PER_DOMAIN=10
