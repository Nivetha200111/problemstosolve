{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/ingest",
      "schedule": "0 */2 * * *"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "CRON_SECRET": "@cron_secret"
  }
}
